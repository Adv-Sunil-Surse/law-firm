<script>
  // ===== ADMIN CREDENTIALS =====
  const ADMIN_CREDENTIALS = {
    username: 'admin',
    password: 'surse@2024'
  };

  // ===== JUNIOR ACCESS CREDENTIALS =====
  const JUNIOR_CREDENTIALS = {
    'JUN001': 'JUN2024',
    'JUN002': 'ACCESS22',
    'JUN003': 'LAW2024'
  };

  // ===== PRELOADER =====
  window.addEventListener('load', () => {
    setTimeout(() => {
      document.getElementById('preloader').classList.add('hide');
      setTimeout(() => {
        if (!localStorage.getItem('disclaimerAccepted')) {
          document.getElementById('disclaimerOverlay').classList.add('active');
        }
      }, 500);
    }, 3000);
  });

  // ===== PARTICLES =====
  function createParticles() {
    const container = document.getElementById('particles');
    const colors = ['#f0c14b', '#a855f7', '#14b8a6', '#f43f5e'];
    for (let i = 0; i < 30; i++) {
      const particle = document.createElement('div');
      particle.className = 'particle';
      particle.style.left = Math.random() * 100 + '%';
      particle.style.animationDelay = Math.random() * 15 + 's';
      particle.style.animationDuration = (15 + Math.random() * 10) + 's';
      particle.style.background = colors[Math.floor(Math.random() * colors.length)];
      container.appendChild(particle);
    }
  }
  createParticles();

  // ===== DISCLAIMER FUNCTIONS =====
  function toggleAgreeButton() {
    const checkbox = document.getElementById('agreeCheck');
    const btn = document.getElementById('agreeBtn');
    btn.disabled = !checkbox.checked;
  }

  function acceptDisclaimer() {
    document.getElementById('disclaimerOverlay').classList.remove('active');
    localStorage.setItem('disclaimerAccepted', 'true');
  }

  // ===== NAVIGATION =====
  const navbar = document.getElementById('navbar');
  const menuBtn = document.getElementById('menuBtn');
  const mobileNav = document.getElementById('mobileNav');

  window.addEventListener('scroll', () => {
    navbar.classList.toggle('scrolled', window.scrollY > 50);
  });

  menuBtn.addEventListener('click', () => {
    menuBtn.classList.toggle('active');
    mobileNav.classList.toggle('active');
  });

  mobileNav.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      menuBtn.classList.remove('active');
      mobileNav.classList.remove('active');
    });
  });

  // ===== SCROLL REVEAL =====
  const revealElements = document.querySelectorAll('.reveal, .stagger');

  function checkReveal() {
    revealElements.forEach(el => {
      const rect = el.getBoundingClientRect();
      if (rect.top < window.innerHeight - 100) {
        el.classList.add('active');
      }
    });
  }

  window.addEventListener('scroll', checkReveal);
  checkReveal();

  // ===== ADMIN LOGIN =====
  document.getElementById('adminLoginForm').addEventListener('submit', (e) => {
    e.preventDefault();
    const user = document.getElementById('adminUsername').value;
    const pass = document.getElementById('adminPassword').value;
    const status = document.getElementById('adminLoginStatus');

    if (user === ADMIN_CREDENTIALS.username && pass === ADMIN_CREDENTIALS.password) {
      localStorage.setItem('adminLoggedIn', 'true');
      status.className = 'admin-status success';
      status.textContent = '✅ Login successful! Opening document management...';
      setTimeout(() => {
        openDriveModal();
        status.className = 'admin-status';
        e.target.reset();
      }, 1500);
    } else {
      status.className = 'admin-status error';
      status.textContent = '❌ Invalid credentials. Try: admin / surse@2024';
    }
  });

  // ===== JUNIOR LOGIN =====
  document.getElementById('juniorLoginForm').addEventListener('submit', (e) => {
    e.preventDefault();
    const juniorId = document.getElementById('juniorId').value;
    const juniorCode = document.getElementById('juniorCode').value;
    const folder = document.getElementById('juniorCaseFolder').value;
    const status = document.getElementById('juniorLoginStatus');

    if (!folder) {
      status.className = 'junior-status error';
      status.textContent = '❌ Please select a case folder to access';
      return;
    }

    if (JUNIOR_CREDENTIALS[juniorId] === juniorCode) {
      localStorage.setItem('juniorLoggedIn', 'true');
      localStorage.setItem('juniorId', juniorId);
      localStorage.setItem('currentFolder', folder);
      status.className = 'junior-status success';
      status.textContent = `✅ Access granted! Opening folder: ${folder}`;
      setTimeout(() => {
        openDriveModal();
        status.className = 'junior-status';
        e.target.reset();
      }, 1500);
    } else {
      status.className = 'junior-status error';
      status.textContent = '❌ Invalid Junior ID or Access Code';
    }
  });

  // ===== DRIVE MODAL FUNCTIONS =====
  function openDriveModal() {
    document.getElementById('driveModal').classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeDriveModal() {
    document.getElementById('driveModal').classList.remove('active');
    document.body.style.overflow = '';
  }

  // Close modal on overlay click
  document.getElementById('driveModal').addEventListener('click', (e) => {
    if (e.target === document.getElementById('driveModal')) {
      closeDriveModal();
    }
  });

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeDriveModal();
    }
  });

  function uploadDocument() {
    alert('📤 Upload Feature\n\nThis would open a file picker for uploading documents.\n\nSupported formats: PDF, DOC, DOCX, JPG, PNG');
  }

  function createFolder() {
    const folderName = prompt('📁 Create New Folder\n\nEnter folder name:');
    if (folderName) {
      const grid = document.getElementById('folderGrid');
      const newFolder = document.createElement('div');
      newFolder.className = 'drive-folder';
      newFolder.onclick = () => openFolder(folderName);
      newFolder.innerHTML = `
        <div class="icon">📁</div>
        <h4>${folderName}</h4>
        <p>0 files • New</p>
      `;
      grid.appendChild(newFolder);
      alert(`✅ Folder "${folderName}" created successfully!`);
    }
  }

  function openFolder(folderName) {
    alert(`📂 Opening folder: ${folderName}\n\nDisplaying documents for this case...`);
  }

  function openDocument(docName) {
    alert(`📄 Opening document: ${docName}\n\nThis would open the document viewer/editor.`);
  }

  function filterDocs(type) {
    document.querySelectorAll('.drive-sidebar-item').forEach(item => item.classList.remove('active'));
    event.target.closest('.drive-sidebar-item').classList.add('active');
    alert(`🔍 Filtering: ${type.toUpperCase()}\n\nShowing ${type} files only...`);
  }

  function searchDocs() {
    const query = document.getElementById('docSearch').value.toLowerCase();
    const files = document.querySelectorAll('.drive-file');
    const folders = document.querySelectorAll('.drive-folder');
    
    files.forEach(file => {
      const name = file.querySelector('h4').textContent.toLowerCase();
      file.style.display = name.includes(query) ? 'flex' : 'none';
    });
    
    folders.forEach(folder => {
      const name = folder.querySelector('h4').textContent.toLowerCase();
      folder.style.display = name.includes(query) ? 'block' : 'none';
    });
  }

  // ===== FORM HANDLERS =====
  document.getElementById('appointmentForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const status = document.getElementById('appointmentStatus');
    status.className = 'form-status loading';
    status.textContent = '⏳ Submitting your request...';

    await new Promise(r => setTimeout(r, 1500));
    
    const appointments = JSON.parse(localStorage.getItem('appointments') || '[]');
    appointments.push({
      id: Date.now(),
      name: document.getElementById('aName').value,
      email: document.getElementById('aEmail').value,
      phone: document.getElementById('aPhone').value,
      type: document.getElementById('aType').value,
      date: document.getElementById('aDate').value,
      message: document.getElementById('aMsg').value,
      timestamp: new Date().toISOString(),
      status: 'pending'
    });
    localStorage.setItem('appointments', JSON.stringify(appointments));

    status.className = 'form-status success';
    status.textContent = '✅ Request submitted successfully! We will contact you within 24-48 hours.';
    e.target.reset();
  });

  document.getElementById('contactForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const status = document.getElementById('contactStatus');
    status.className = 'form-status loading';
    status.textContent = '⏳ Sending your message...';

    await new Promise(r => setTimeout(r, 1500));
    
    status.className = 'form-status success';
    status.textContent = '✅ Message sent successfully! We will respond shortly.';
    e.target.reset();
  });

  // ===== SMOOTH SCROLL =====
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });

  // ===== SET MIN DATE FOR APPOINTMENT =====
  const dateInput = document.getElementById('aDate');
  if (dateInput) {
    const today = new Date().toISOString().split('T')[0];
    dateInput.setAttribute('min', today);
  }

  console.log('🏛️ Surse Law Firm - Website Loaded Successfully');
  console.log('📁 Document Management System Ready');
  console.log('🔐 Admin Access: admin / surse@2024');
  console.log('👨‍💼 Junior Access: JUN001 / JUN2024');
</script>

</body>
</html>
