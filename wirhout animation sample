<script>
  // Admin Credentials
  const ADMIN_CREDENTIALS = { id: 'admin', password: 'surse@2024' };

  // Sample Data
  let casesData = [
    { id: 'CASE/2024/001', title: 'Sharma Property Dispute', client: 'Ramesh Sharma', type: 'property', status: 'active', court: 'District Court', hearing: '2024-02-15', access: ['admin', 'JUN001'] },
    { id: 'CASE/2024/002', title: 'Patel Corporate Merger', client: 'Patel Industries', type: 'corporate', status: 'active', court: 'High Court', hearing: '2024-02-20', access: ['admin', 'JUN003'] },
    { id: 'CASE/2024/003', title: 'Singh Divorce Settlement', client: 'Priya Singh', type: 'family', status: 'pending', court: 'Family Court', hearing: '2024-02-18', access: ['admin', 'JUN002'] },
    { id: 'CASE/2024/004', title: 'Reddy Criminal Appeal', client: 'Vijay Reddy', type: 'criminal', status: 'urgent', court: 'Sessions Court', hearing: '2024-02-10', access: ['admin', 'JUN001'] },
    { id: 'CASE/2024/005', title: 'Kumar Land Acquisition', client: 'Suresh Kumar', type: 'property', status: 'closed', court: 'Revenue Court', hearing: '', access: ['admin'] },
  ];

  let documentsData = [
    { id: 1, name: 'Affidavit - Sharma v2.pdf', type: 'pdf', case: 'CASE/2024/001', size: '2.4 MB', date: '2024-01-15' },
    { id: 2, name: 'Agreement - Patel Merger.docx', type: 'doc', case: 'CASE/2024/002', size: '156 KB', date: '2024-01-18' },
    { id: 3, name: 'Court Order - Singh.pdf', type: 'pdf', case: 'CASE/2024/003', size: '1.8 MB', date: '2024-01-20' },
    { id: 4, name: 'Property Deed Scan.jpg', type: 'img', case: 'CASE/2024/001', size: '3.2 MB', date: '2024-01-22' },
    { id: 5, name: 'Bail Application - Reddy.pdf', type: 'pdf', case: 'CASE/2024/004', size: '890 KB', date: '2024-01-25' },
  ];

  // Preloader
  window.addEventListener('load', () => {
    setTimeout(() => {
      document.getElementById('preloader').classList.add('hide');
      setTimeout(() => {
        if (!localStorage.getItem('disclaimerAccepted')) {
          document.getElementById('disclaimerOverlay').classList.add('active');
        }
      }, 500);
    }, 2500);
  });

  // Disclaimer
  function toggleAgreeButton() {
    document.getElementById('agreeBtn').disabled = !document.getElementById('agreeCheck').checked;
  }
  function acceptDisclaimer() {
    document.getElementById('disclaimerOverlay').classList.remove('active');
    localStorage.setItem('disclaimerAccepted', 'true');
  }

  // Navigation
  const navbar = document.getElementById('navbar');
  const menuBtn = document.getElementById('menuBtn');
  const mobileNav = document.getElementById('mobileNav');

  window.addEventListener('scroll', () => navbar.classList.toggle('scrolled', window.scrollY > 50));
  menuBtn.addEventListener('click', () => {
    menuBtn.classList.toggle('active');
    mobileNav.classList.toggle('active');
  });
  mobileNav.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      menuBtn.classList.remove('active');
      mobileNav.classList.remove('active');
    });
  });

  // Scroll Reveal
  const revealElements = document.querySelectorAll('.reveal');
  function checkReveal() {
    revealElements.forEach(el => {
      if (el.getBoundingClientRect().top < window.innerHeight - 80) el.classList.add('active');
    });
  }
  window.addEventListener('scroll', checkReveal);
  checkReveal();

  // Admin Login
  function openAdminLogin() {
    menuBtn.classList.remove('active');
    mobileNav.classList.remove('active');
    document.getElementById('adminLoginModal').classList.add('active');
    document.body.style.overflow = 'hidden';
  }
  function closeAdminLogin() {
    document.getElementById('adminLoginModal').classList.remove('active');
    document.body.style.overflow = '';
  }

  document.getElementById('adminLoginForm').addEventListener('submit', (e) => {
    e.preventDefault();
    const id = document.getElementById('adminId').value;
    const pass = document.getElementById('adminPassword').value;
    const status = document.getElementById('adminLoginStatus');
    if (id === ADMIN_CREDENTIALS.id && pass === ADMIN_CREDENTIALS.password) {
      status.className = 'admin-status success';
      status.textContent = '‚úÖ Login successful!';
      setTimeout(() => {
        closeAdminLogin();
        openAdminDashboard();
        e.target.reset();
        status.className = 'admin-status';
      }, 1000);
    } else {
      status.className = 'admin-status error';
      status.textContent = '‚ùå Invalid credentials';
    }
  });

  // Admin Dashboard
  function openAdminDashboard() {
    document.getElementById('adminModal').classList.add('active');
    document.body.style.overflow = 'hidden';
    loadCases();
    loadDocuments();
    updateStats();
  }
  function closeAdminModal() {
    document.getElementById('adminModal').classList.remove('active');
    document.body.style.overflow = '';
  }
  function switchTab(tab) {
    document.querySelectorAll('.admin-tab').forEach(t => t.classList.remove('active'));
    document.querySelectorAll('.admin-panel').forEach(p => p.classList.remove('active'));
    event.target.classList.add('active');
    document.getElementById('panel-' + tab).classList.add('active');
  }
  function updateStats() {
    document.getElementById('totalCases').textContent = casesData.length;
    document.getElementById('activeCases').textContent = casesData.filter(c => c.status === 'active').length;
    document.getElementById('pendingCases').textContent = casesData.filter(c => c.status === 'pending' || c.status === 'urgent').length;
    document.getElementById('closedCases').textContent = casesData.filter(c => c.status === 'closed').length;
  }
  function loadCases() {
    const casesHtml = casesData.map(c => `
      <div class="case-item">
        <div class="case-header">
          <div class="case-id">${c.id}</div>
          <span class="case-status ${c.status}">${c.status.charAt(0).toUpperCase() + c.status.slice(1)}</span>
        </div>
        <div class="case-title">${c.title}</div>
        <div class="case-meta">${c.client} ‚Ä¢ ${c.type.charAt(0).toUpperCase() + c.type.slice(1)} ‚Ä¢ ${c.court || 'N/A'}</div>
        <div class="case-actions">
          <button class="case-action-btn" onclick="viewCase('${c.id}')">View</button>
          <button class="case-action-btn" onclick="editCase('${c.id}')">Edit</button>
          <button class="case-action-btn primary" onclick="manageDocs('${c.id}')">Documents</button>
        </div>
      </div>
    `).join('');
    document.getElementById('recentCasesList').innerHTML = casesHtml;
    document.getElementById('allCasesList').innerHTML = casesHtml;
    const docFilter = document.getElementById('docCaseFilter');
    docFilter.innerHTML = '<option value="all">All Cases</option>' + casesData.map(c => `<option value="${c.id}">${c.id}</option>`).join('');
  }
  function loadDocuments() {
    document.getElementById('documentsList').innerHTML = documentsData.map(d => `
      <div class="doc-item">
        <div class="doc-icon ${d.type}">${d.type === 'pdf' ? 'üìÑ' : d.type === 'doc' ? 'üìù' : 'üñºÔ∏è'}</div>
        <div class="doc-info">
          <h4>${d.name}</h4>
          <p>${d.case} ‚Ä¢ ${d.size} ‚Ä¢ ${d.date}</p>
        </div>
      </div>
    `).join('');
  }
  function filterCases() {
    const filter = document.getElementById('caseFilter').value;
    const filtered = filter === 'all' ? casesData : casesData.filter(c => c.status === filter);
    document.getElementById('allCasesList').innerHTML = filtered.map(c => `
      <div class="case-item">
        <div class="case-header">
          <div class="case-id">${c.id}</div>
          <span class="case-status ${c.status}">${c.status.charAt(0).toUpperCase() + c.status.slice(1)}</span>
        </div>
        <div class="case-title">${c.title}</div>
        <div class="case-meta">${c.client} ‚Ä¢ ${c.type} ‚Ä¢ ${c.court || 'N/A'}</div>
        <div class="case-actions">
          <button class="case-action-btn" onclick="viewCase('${c.id}')">View</button>
          <button class="case-action-btn" onclick="editCase('${c.id}')">Edit</button>
          <button class="case-action-btn primary" onclick="manageDocs('${c.id}')">Documents</button>
        </div>
      </div>
    `).join('');
  }

  // Add Case Form
  document.getElementById('addCaseForm').addEventListener('submit', (e) => {
    e.preventDefault();
    const newCase = {
      id: document.getElementById('caseNumber').value,
      title: document.getElementById('caseTitle').value,
      client: document.getElementById('clientName').value,
      type: document.getElementById('caseType').value,
      status: document.getElementById('caseStatus').value,
      court: document.getElementById('courtName').value,
      hearing: document.getElementById('hearingDate').value,
      access: ['admin']
    };
    if (document.getElementById('access-jun001').checked) newCase.access.push('JUN001');
    if (document.getElementById('access-jun002').checked) newCase.access.push('JUN002');
    if (document.getElementById('access-jun003').checked) newCase.access.push('JUN003');
    casesData.push(newCase);
    const status = document.getElementById('addCaseStatus');
    status.className = 'form-status success';
    status.textContent = '‚úÖ Case added successfully!';
    loadCases();
    updateStats();
    e.target.reset();
    setTimeout(() => { status.className = 'form-status'; }, 3000);
  });

  // Placeholder functions
  function viewCase(id) { alert('Viewing case: ' + id); }
  function editCase(id) { alert('Editing case: ' + id); }
  function manageDocs(id) { alert('Managing documents for: ' + id); }
  function uploadDocument() { alert('Upload document feature - Click to select files'); }
  function editUserAccess(id) { alert('Edit access for user: ' + id); }
  function resetPassword(id) { alert('Reset password for user: ' + id); }
  function addNewUser() { alert('Add new user feature'); }

  // Form handlers
  document.getElementById('appointmentForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const status = document.getElementById('appointmentStatus');
    status.className = 'form-status success';
    status.textContent = '‚úÖ Request submitted! We will contact you within 24-48 hours.';
    e.target.reset();
  });
  document.getElementById('contactForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const status = document.getElementById('contactStatus');
    status.className = 'form-status success';
    status.textContent = '‚úÖ Message sent successfully!';
    e.target.reset();
  });

  // Smooth scroll
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });
  });

  // Set min date
  const dateInput = document.getElementById('aDate');
  if (dateInput) dateInput.setAttribute('min', new Date().toISOString().split('T')[0]);

  console.log('üèõÔ∏è Surse Law Firm - Website Loaded');
  console.log('üîê Admin: admin / surse@2024');
</script>

</body>
</html>
This complete index.html file includes:
Key Features:

1. Fully Mobile Optimized - Responsive design that works perfectly on all screen sizes
2. Admin-Only Access - Secure login with ID/password authentication
